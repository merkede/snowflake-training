---
import Layout from '../layouts/Layout.astro';
import ModulesGrid from '../components/ModulesGrid';

const domains = [
  {
    name: 'Domain 1: Architecture & Features',
    weight: '25%',
    gradient: 'linear-gradient(135deg, #29b5e8, #56c4ed)',
    modules: [
      { id: 'intro', title: 'Introduction to Snowflake', slug: '/fundamentals/intro' },
      { id: 'architecture', title: 'Snowflake Architecture', slug: '/architecture/overview' },
      { id: 'databases-schemas', title: 'Databases, Schemas & Tables', slug: '/architecture/databases' },
      { id: 'virtual-warehouses', title: 'Virtual Warehouses', slug: '/architecture/warehouses' },
      { id: 'data-storage', title: 'Data Storage & Clustering', slug: '/storage/overview' },
    ],
  },
  {
    name: 'Domain 2: Account Access & Security',
    weight: '20%',
    gradient: 'linear-gradient(135deg, #7c3aed, #a78bfa)',
    modules: [
      { id: 'user-management', title: 'User & Role Management', slug: '/security/users-roles' },
      { id: 'rbac', title: 'Role-Based Access Control', slug: '/security/rbac' },
      { id: 'network-security', title: 'Network Policies & Security', slug: '/security/network' },
      { id: 'authentication', title: 'Authentication & SSO', slug: '/security/authentication' },
    ],
  },
  {
    name: 'Domain 3: Performance Concepts',
    weight: '15%',
    gradient: 'linear-gradient(135deg, #ea580c, #f97316)',
    modules: [
      { id: 'query-optimization', title: 'Query Performance & Optimisation', slug: '/performance/queries' },
      { id: 'caching', title: 'Caching Mechanisms', slug: '/performance/caching' },
      { id: 'clustering-keys', title: 'Clustering Keys', slug: '/performance/clustering' },
      { id: 'search-optimization', title: 'Search Optimisation Service', slug: '/performance/search' },
    ],
  },
  {
    name: 'Domain 4: Data Loading & Unloading',
    weight: '15%',
    gradient: 'linear-gradient(135deg, #16a34a, #4ade80)',
    modules: [
      { id: 'bulk-loading', title: 'Bulk Data Loading', slug: '/data-loading/bulk' },
      { id: 'snowpipe', title: 'Snowpipe & Continuous Loading', slug: '/data-loading/snowpipe' },
      { id: 'external-stages', title: 'Stages & File Formats', slug: '/data-loading/stages' },
      { id: 'unloading', title: 'Data Unloading', slug: '/data-loading/unloading' },
    ],
  },
  {
    name: 'Domain 5: Data Transformations',
    weight: '15%',
    gradient: 'linear-gradient(135deg, #db2777, #f472b6)',
    modules: [
      { id: 'sql-basics', title: 'Snowflake SQL Essentials', slug: '/data-transformations/sql-basics' },
      { id: 'functions', title: 'Functions & Procedures', slug: '/data-transformations/functions' },
      { id: 'streams-tasks', title: 'Streams & Tasks', slug: '/data-transformations/streams-tasks' },
    ],
  },
  {
    name: 'Domain 6: Data Protection & Sharing',
    weight: '10%',
    gradient: 'linear-gradient(135deg, #164365, #29b5e8)',
    modules: [
      { id: 'time-travel', title: 'Time Travel & Fail-safe', slug: '/data-protection/time-travel' },
      { id: 'cloning', title: 'Zero-Copy Cloning', slug: '/data-protection/cloning' },
      { id: 'data-sharing', title: 'Secure Data Sharing', slug: '/data-protection/sharing' },
    ],
  },
];
---

<Layout title="All Modules | Snowflake Training">
  <div class="bg-gradient-to-b from-slate-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="mb-4">All Training Modules</h1>
      <p class="text-xl text-slate-600 max-w-3xl">
        Complete COF-C02 curriculum across 6 exam domains and 23 modules.
        Your progress is saved automatically as you work through each module. Click any card to get started.
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <ModulesGrid client:load domains={domains} />

    <!-- Bottom CTA -->
    <div class="mt-16 grid md:grid-cols-3 gap-6">
      <a href="/flashcards" class="card text-center no-underline hover:shadow-lg transition-all group">
        <div class="text-3xl mb-3">üÉè</div>
        <h3 class="text-lg font-bold text-slate-900 group-hover:text-primary mb-1">Flashcards</h3>
        <p class="text-sm text-slate-500">Active recall practice across all domains</p>
      </a>
      <a href="/cheatsheets" class="card text-center no-underline hover:shadow-lg transition-all group">
        <div class="text-3xl mb-3">üìã</div>
        <h3 class="text-lg font-bold text-slate-900 group-hover:text-primary mb-1">Cheat Sheets</h3>
        <p class="text-sm text-slate-500">Quick-reference summaries for exam day</p>
      </a>
      <a href="/practice" class="card text-center no-underline hover:shadow-lg transition-all group">
        <div class="text-3xl mb-3">‚úèÔ∏è</div>
        <h3 class="text-lg font-bold text-slate-900 group-hover:text-primary mb-1">Practice Exam</h3>
        <p class="text-sm text-slate-500">Timed mock exams with COF-C02 questions</p>
      </a>
    </div>
  </div>
</Layout>
